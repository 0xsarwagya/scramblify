{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"node_modules",
			"coverage",
			"build",
			"dist",
			"*.log",
			".github",
			"scripts",
			"*.config.js",
			"*.json"
		]
	},
	"linter": {
		"rules": {
			"all": true,
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	}
}
